<div class="col-md-12">
  <h2 class="text-center">我收藏的电影</h2>
  <hr />

  <table class="table">
    <thead>
      <tr>
        <th> #</th>
        <th> 电影名</th>
        <th>  评论数 </th>
        <th>最后更新时间</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <td>  <%= link_to(group.title, group_path(group) )%>  </td>
        <td>  <%= group.posts.count %></td>
        <td>  <%= group.created_at %>  </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
