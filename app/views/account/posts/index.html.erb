<div class="col-md-12">
  <h2 class="text-center">我发表的文章 </h2>
  <hr />

  <table class="table">
    <thead>
      <tr>
        <th> #</th>
        <th>  content</th>
        <th>  group.name</th>
        <th>last_update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td>#</td>
        <td>  <%= post.content %>  </td>
        <td>  <%= post.group.title %></td>
        <td>  <%= post.created_at %>  </td>
        <td>
          <%=link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-sm")%>
          <%=link_to("Delete", group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default btn-sm")%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
