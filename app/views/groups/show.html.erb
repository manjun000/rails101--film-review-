<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success">已收藏电影</label>
        <%= link_to("取消收藏电影", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <% else %>
      <label class="label label-warning">未收藏电影</label>
      <%=link_to("收藏电影", join_group_path(@group), method: :post, class:"btn btn-default btn-sm")%>
      <% end %>
    </span>

    <%=link_to("写影评", new_group_post_path(@group), class: "btn btn-default pull-right")%>
  </div>


  <% if current_user && current_user == @group.user %>
    <div class="group">
      <%=link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    </div>
  <% end %>

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <div class="col=md-12">
      <thead>
        <tr>
          <th>#</th>
          <th >评论内容 </th>
          <th>  发布者</th>
          <th>更新时间</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>  #  </td>
            <td><%=  post.content %></td>
            <td><%=  post.user.email %></td>
            <td><%= post.created_at %> </td>
          </tr>
        <% end %>
      </tbody>
    </div>
    </table>

  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
</div>
